{
    "manifest_version": 2,
    "name": "Research Papers",
    "version": "1.1.3",
    "description": "Get PDFs",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "24": "images/icon24.png",
            "32": "images/c_icon32.png"
        }
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "activeTab",
        "notifications",
        "contextMenus"
    ]
}
